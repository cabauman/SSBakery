                <Label Text="Section 1" WidthRequest="100" HeightRequest="100" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" BackgroundColor="AliceBlue" />
                <Label Text="Section 2" WidthRequest="100" HeightRequest="100" BackgroundColor="Beige" />
                <Label Text="Section 3" WidthRequest="100" HeightRequest="100" BackgroundColor="Cornsilk" />
                <Label Text="Section 3" WidthRequest="100" HeightRequest="100" BackgroundColor="GreenYellow" />
